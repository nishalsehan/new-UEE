<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGradesActivity"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="90dp"
                    android:paddingBottom="10dp"
                    android:text="Add Grades"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/autour_one"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/autour_one"
                    />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/metrophobic"
                    android:paddingBottom="5dp"
                    android:background="@drawable/grade_update_background"
                    android:paddingLeft="10dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/autour_one"
                    />

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/grade_update_background"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:lines="5"
                    android:fontFamily="@font/metrophobic"
                    android:paddingLeft="10dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="40dp">

                    <Button
                        android:id="@+id/back"
                        android:layout_width="130dp"
                        android:layout_height="55dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/back_button"
                        android:drawableLeft="@drawable/ic_settings_backup_restore_black_24dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:text=" Back"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/save"
                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="130dp"
                        android:layout_height="55dp"
                        android:layout_margin="20dp"
                        android:drawableLeft="@drawable/ic_save_black_24dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:text=" Save"
                        android:textSize="20dp" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>