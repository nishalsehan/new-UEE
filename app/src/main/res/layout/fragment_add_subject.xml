<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayoutAddSubjectTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/book_white"
                        android:padding="10dp"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="ADD A SUBJECT"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                </LinearLayout>





                <RelativeLayout
                    android:id="@+id/relativeLayoutAddSubjectName"
                    android:background="@drawable/relative_layout_background_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutAddSubjectTop"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/imgViewAddSubjectName"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/book_name"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/editTextAddSubjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgViewAddSubjectName"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgViewAddSubjectName"
                        android:background="@drawable/relative_layout_background_3"
                        android:hint="Name"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayoutAddSubjectGrade"
                    android:layout_width="match_parent"
                    android:background="@drawable/relative_layout_background_2"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutAddSubjectName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/imgViewAddSubjectGrade"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/grades"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/editTextAddSubjectGrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgViewAddSubjectGrade"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgViewAddSubjectGrade"
                        android:background="@drawable/relative_layout_background_3"
                        android:hint="Grade"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutAddSubjectClassroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/relative_layout_background_2"
                    android:layout_below="@+id/relativeLayoutAddSubjectGrade"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/imgViewAddSubjectClassroom"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/classrooms"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/editTextAddSubjectClassRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgViewAddSubjectClassroom"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgViewAddSubjectClassroom"
                        android:background="@drawable/relative_layout_background_3"
                        android:hint="Classroom"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>



                <Button
                    android:id="@+id/btnAddSubjectAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutAddSubjectClassroom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/relative_layout_background_2"
                    android:fontFamily="sans-serif-medium"
                    android:text="ADD SUBJECT"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/btnAddSubjectReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnAddSubjectAdd"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/relative_layout_background_4"
                    android:fontFamily="sans-serif-medium"
                    android:text="RESET"
                    android:layout_marginBottom="220dp"
                    android:textColor="@color/white" />





            </RelativeLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>







</RelativeLayout>