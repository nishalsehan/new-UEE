<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultDashboardActivity"
    android:orientation="vertical"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="1"
            android:padding="5dp"
            android:layout_margin="20dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/addResults"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/grade_update_background"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/add_result_1" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Results"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#ec8800"
                        android:fontFamily="@font/metrophobic"
                        android:textSize="28sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewResults"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/new_background"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/view_result" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Results"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/metrophobic"
                        android:textColor="#A771DD"
                        android:textSize="28sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>



    </RelativeLayout>

</LinearLayout>